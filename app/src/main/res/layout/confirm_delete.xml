<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:id="@+id/containerConfirmDelete">

    <TextView
        android:id="@+id/tvConfirmDeletion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete this reservation?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnConfirmDeletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvConfirmDeletion"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#E82D2D"
        android:text="Delete" />

    <Button
        android:id="@+id/btnCancelDeletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvConfirmDeletion"
        android:layout_marginStart="60dp"
        android:backgroundTint="#A1A0A0"
        android:text="Cancel"
        android:layout_marginTop="40dp"/>


</RelativeLayout>